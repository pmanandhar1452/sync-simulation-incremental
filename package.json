{
  "name": "simulation-platform",
  "version": "1.0.0",
  "description": "A comprehensive simulation platform built with concept design architecture",
  "main": "backend-server.ts",
  "scripts": {
    "start": "deno run --allow-net --allow-read --allow-env backend-server.ts",
    "start:simple": "deno run --allow-net --allow-read backend-server-simple.ts",
    "dev": "deno run --allow-net --allow-read --allow-env --watch backend-server.ts",
    "dev:simple": "deno run --allow-net --allow-read --watch backend-server-simple.ts",
    "frontend": "python3 -m http.server 8000",
    "backend": "deno run --allow-net --allow-read --allow-env backend-server.ts",
    "backend:simple": "deno run --allow-net --allow-read backend-server-simple.ts",
    "test": "deno test --allow-net --allow-read",
    "build": "echo 'No build step required for Deno'",
    "setup": "cp env.example .env && echo 'âœ… Created .env file. Please edit it with your database credentials.'"
  },
  "keywords": [
    "simulation",
    "concept-design",
    "threejs",
    "typescript",
    "mysql",
    "express"
  ],
  "author": "Simulation Platform Team",
  "license": "MIT",
  "dependencies": {
    "mysql2": "^3.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/body-parser": "^1.19.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "deno": ">=1.30.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/simulation-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/simulation-platform/issues"
  },
  "homepage": "https://github.com/your-username/simulation-platform#readme"
}
